---
import Post from "./Post.astro";

export type Props = {
  posts: PostSummary[];
};
const { posts } = Astro.props;
---

<ul class="grow relative space-y-2 sm:pl-4 my-4">
  <span
    class="hidden sm:inline absolute top-8 left-0 bottom-0 w-[2px] bg-cyan-11 dark:bg-cyandark-11"
  ></span>
  {
    posts.map((post) => (
      <li class="group relative">
        <span class="hidden sm:inline absolute top-[18px] md:top-[23px] -left-[23px] w-4 h-4 rounded-full border-2 border-cyan-11 dark:border-cyandark-11 bg-gray-1 dark:bg-graydark-1 group-hover:bg-cyan-11 dark:group-hover:bg-cyandark-11" />
        <Post ghost {...post} />
      </li>
    ))
  }
</ul>
