---
import { fetchLatestPosts } from "utils/post/fetchLatestPosts";
import ArrowRight from "./icons/ArrowRight";
import Post from "./Post.astro";
import SectionTitle from "./SectionTitle.astro";

const latestPosts = await fetchLatestPosts();
---

<div class="flex justify-between items-center px-2">
  <SectionTitle>ðŸ“† Latest</SectionTitle>
  <a
    href="/posts/1"
    class="flex items-center gap-1 px-2 py-1 text-sm md:text-base hover:text-cyan-11 dark:hover:text-cyandark-11"
  >
    View all
    <ArrowRight size={16} />
  </a>
</div>
<ul class="space-y-2 mt-4">
  {
    latestPosts.map((post) => (
      <li>
        <Post ghost {...post} />
      </li>
    ))
  }
</ul>
<div class="flex justify-center mt-4">
  <a
    href="/posts/1"
    class="flex items-center gap-1 px-2 py-1 text-sm md:text-base hover:text-cyan-11 dark:hover:text-cyandark-11"
  >
    View all
    <ArrowRight size={16} />
  </a>
</div>
