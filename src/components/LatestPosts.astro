---
import { fetchLatestPosts } from "utils/post/fetchLatestPosts";
import ArrowRight from "./icons/ArrowRight";
import Post from "./Post.astro";
import SectionTitle from "./SectionTitle.astro";

const latestPosts = await fetchLatestPosts();
---

<div class="flex justify-between items-center px-2">
  <SectionTitle>Latest</SectionTitle>
  <a
    href="/posts"
    class="flex items-center gap-1 p-2 text-sm md:text-base hover:text-cyan-11 dark:hover:text-cyandark-11"
  >
    View all
    <ArrowRight size={16} />
  </a>
</div>
<ul class="space-y-2">
  {
    latestPosts.map((post) => (
      <li>
        <Post {...post} />
      </li>
    ))
  }
</ul>
<a
  href="/posts"
  class="flex justify-center items-center gap-1 p-2 text-sm md:text-base hover:text-cyan-11 dark:hover:text-cyandark-11"
>
  View all
  <ArrowRight size={16} />
</a>
