---
export type Props = {
  href: string;
};
const { href } = Astro.props;

const isCurrent = Astro.url.pathname.startsWith(href);
---

<a
  href={href}
  aria-current={isCurrent ? "page" : "false"}
  class="px-2 py-1 font-medium text-lg text-gray-11 dark:text-graydark-11 hover:text-gray-12 dark:hover:text-graydark-12"
>
  <slot />
</a>
