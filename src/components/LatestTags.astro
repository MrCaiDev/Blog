---
import ArrowRight from "./icons/ArrowRight";
import SectionTitle from "./SectionTitle.astro";
import Tag from "./Tag.astro";

export type Props = {
  tags: PostTag[];
};
const { tags } = Astro.props;
---

<div class="flex justify-between items-center px-2">
  <SectionTitle>üè∑Ô∏è Tags</SectionTitle>
  <a
    href="/tags"
    class="flex items-center gap-1 px-2 py-1 text-sm md:text-base hover:text-cyan-11 dark:hover:text-cyandark-11"
  >
    View all
    <ArrowRight size={16} />
  </a>
</div>
<ul class="columns-xs gap-4 mt-4">
  {
    tags.map((tag) => (
      <li>
        <Tag ghost {...tag} />
      </li>
    ))
  }
</ul>
